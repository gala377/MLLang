; modify external capture
fn external_capture:
  let cap = 0
  let f = do:
    cap = 7
  f!
  io.print cap

external_capture!

fn outer_modifies:
  let i = 0
  let inner = do:
    io.print i
  i = 10
  inner!

outer_modifies!

fn lift_func_args a b:
  let f = do:
    a = add a 1
    b = a
  io.print a
  io.print b
  f!
  io.print a
  io.print b

lift_func_args 1 10